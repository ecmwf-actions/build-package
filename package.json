{
  "name": "build-package",
  "version": "2.1.0",
  "description": "A Github action to build ECMWF software",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "scripts/postinstall.sh",
    "build": "npx @vercel/ncc build src/index.js --minify --license licenses.txt --no-cache",
    "test": "jest --ci --coverage",
    "lint": "eslint --ext .js,.yml --fix action.yml .github src tests",
    "version": "auto-changelog && git add CHANGELOG.md"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecmwf-actions/build-package"
  },
  "dependencies": {
    "@actions/artifact": "^0.5.2",
    "@actions/cache": "^1.0.7",
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/http-client": "^1.0.11",
    "@actions/io": "^1.1.1",
    "@octokit/core": "^3.5.1",
    "adm-zip": "^0.5.9",
    "fast-folder-size": "^1.5.0",
    "filesize": "^8.0.0",
    "lodash.isequal": "^4.5.0",
    "tar": "^6.1.2",
    "yargs-parser": "^20.2.9"
  },
  "devDependencies": {
    "auto-changelog": "^2.3.0",
    "eslint": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-json-schema-validator": "^2.1.9",
    "eslint-plugin-jsonc": "^2.0.0",
    "jest": "^27.3.1"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!<rootDir>/node_modules/"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "commonjs": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/all",
      "plugin:json-schema-validator/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "error",
        4
      ]
    }
  },
  "auto-changelog": {
    "commitLimit": 99,
    "hideCredit": true,
    "package": true,
    "template": "keepachangelog"
  }
}
